---
import { Icon } from 'astro-icon/components';
import Button from '../../components/Button.astro';
type Translations = typeof import('../../i18n/es').default;
type InfoContent = Translations['main']['information'];
interface Props {
  content: InfoContent;
}
const { content } = Astro.props as Props;
---

<section
  class="bg-white w-full flex justify-center items-center relative h-auto"
>
  <Icon
    name={'ondulate'}
    class={'absolute bottom-0 w-full h-auto z-10 left-0 rotate-180'}
    style="color: #101C38"
  />
  <div
    class="h-full w-full max-w-screen md:max-w-7xl flex flex-col justify-center items-center px-5 xl:px-0 gap-[115px] pt-[70px] "
  >
    <div class="flex justify-between items-center w-full wrap-normal" data-aos='fade-up' data-aos-offset="300">
      {
        content.list.map((item) => (
          <div class="flex justify-center items-center gap-[19px] ">
            <div class="px-5 py-[17px] bg-secondary/20 rounded-3xl ">
              <Icon name={item.icon} class="w-[100px] h-[100px]" />
            </div>
            <div class="flex flex-col justify-center items-start gap-3">
              <p class="font-title text-[40px] text-primary leading-[120%]">
                {item.numer}
              </p>
              <h3 class="text-[20px] font-medium leading-[120%] uppercase tracking-[4px] text-paragraph">
                {item.title}
              </h3>
              <p class="text-[16px] leading-[120%] text-paragraph">
                {item.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>
    <div class="w-full flex flex-col justify-center items-center gap-[105px]" data-aos='zoom-in' data-aos-offset="400">
      <div class="flex flex-col justify-center items-center gap-[18px]">
        <h2
          class="font-title text-[60px] leading-[120%] text-center text-primary-dark"
        >
          {content.gromming.title}
        </h2>
        <p
          class="text-[16px] text-center text-paragraph leading-[120%]"
          set:html={content.gromming.description}
        />
      </div>
      <div class="w-full flex justify-center items-center gap-[58px]">
        {
          content.gromming.items.map((item) => (
            <div class="w-1/2 rounded-4xl bg-primary pr-[23px] py-14 flex justify-end items-center relative ">
              <img
                src={`/images/main/${item.image}.webp`}
                alt={item.title}
                width={item.with}
                height={item.height}
                class="w-[315px] h-auto absolute left-3 bottom-10"
              />
              <div class="flex flex-col justify-center items-start gap-[18px] max-w-[246px]">
                <p class="text-[42px] leading-[120%] font-title text-white">
                  {item.title}
                </p>
                <p class="text-[14px] leading-[120%] uppercase tracking-[2px] text-white">
                  {item.description}
                </p>
                <Button
                  text={item.button.label}
                  href={item.button.href}
                  extraBtnClass="bg-white"
                  iconName="arrow"
                  textClass='text-primary'
                  iconClass='text-white'
                  iconCircleClass='bg-primary'
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div class="w-full flex justify-between items-center" data-aos="flip-left" data-aos-offset="400">
      <img
        src="/images/main/why.webp"
        alt="why choose us"
        width="619"
        height="564"
        class="w-[580px] h-auto max-w-[623px]"
      />
      <div class="flex flex-col justify-center items-start pt-[33px] pb-[85px] gap-[53px] max-w-[648px]">
        <div class="flex flex-col justify-center items-start gap-[19px]">
          <h2 class="text-[36px] leading-[130%] font-title text-primary-dark">{content.choose.title}</h2>
          <p class="text-[16px] leading-[130%] font-normal text-paragraph">{content.choose.description}</p>
        </div>
        <div class="flex flex-col justify-center items-center  gap-[23px] ">
          {
            content.choose.items.map((item,index)=>(
              <div class="flex justify-start items-start gap-[31px] ">
                <Icon name={item.icon} class={'w-[100px] h-[100px]'}/>
                <div class="flex flex-col justify-center items-start gap-[11px] max-w-[517px]">
                  <h3 class="text-[20px] font-subtitle leading-[120%] font-semibold">{item.title}</h3>
                  <p class="text-[16px] leading-[130%] text-[#686868]">{item.description}</p>
                </div>
              </div>
              <div class={`${index === 1 ? 'hidden' : ''} w-full bg-black/10 h-px`}></div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
