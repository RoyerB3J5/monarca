---
import CarouselReview from '../../components/CarouselReview.astro';

type Translations = typeof import('../../i18n/es').default;
type AboutContent = Translations['main']['about'];
interface Props {
  content: AboutContent;
}
const { content } = Astro.props as Props;
---

<section
  class="w-full h-auto carousel-back flex flex-col justify-center items-center md:items-end pt-10 3xl:pt-14 pb-0 md:pb-5 3xl:pb-9 gap-11 md:gap-[100px] relative z-10 px-5 md:px-0"
>
  <img
    src="/images/main/parents-pet.webp"
    alt="Imagen de Parents Pets"
    width="591"
    height="727"
    loading="lazy"
    decoding="async"
    class="img-carousel absolute w-[35%] 3xl:w-auto left-0 bottom-0 ml-[1%] 2xl:ml-[2%] 3xl:ml-[5%] hidden md:block"
    data-aos="flip-up"
  />
  <div
    class="h-full w-auto flex flex-col justify-center items-center md:items-end 3xl:ditems-start  gap-20 mr-[2%] 3xl:mr-[8%]"
  >
    <div
      class="flex flex-col md:flex-row justify-center items-center gap-8 2xl:gap-20 text-white z-10 w-full md:w-auto"
    >
      <h2
        class="text-[36px] xl:text-[40px] leading-10 font-title"
        set:html={content.title}
      />
      <p
        class="text-[16px] xl:text-[20px] leading-[120%] md:leading-[23px] font-medium md:font-normal"
        set:html={content.description}
      />
    </div>
    <CarouselReview />
  </div>

  <img
    src="/images/main/parents-pet.webp"
    alt="Imagen de Parents Pets"
    width="591"
    height="727"
    loading="lazy"
    decoding="async"
    class="w-full sm:w-[60%] h-auto block md:hidden"
    data-aos="flip-up"
  />
</section>
