---
import { Icon } from 'astro-icon/components';
import Button from '../../components/Button.astro';

type Translations = typeof import('../../i18n/es').default;
type HeroContent = Translations['services']['mobile-dog-grooming']['hero'];
interface Props {
  content: HeroContent;
}
const { content } = Astro.props as Props;
---

<section
  class={`w-full ${content.image.href == 'dog-1' ? 'bg-[#006EC9]/25' : 'bg-[#FFC600]/35'} h-full relative flex justify-center items-center`}
>
  <img
    src="/images/services/bg-dogs.webp"
    alt="Fondo de Mascotas"
    width="1599"
    height="673"
    class="absolute inset-0 w-full h-full object-cover pointer-events-none z-0"
    loading="lazy"
    decoding="async"
  />
  <img
    src="/images/services/back.webp"
    alt="Fondo de Servicios"
    width="541"
    height="466"
    class="absolute bottom-0 left-0 w-[520px] h-auto z-10 pointer-events-none"
    loading="lazy"
    decoding="async"
  />
  <div
    class={`h-full w-full max-w-screen md:max-w-7xl flex justify-center items-end px-5 xl:px-0 pt-[138px] ${content.image.href == 'dog-1' ? 'gap-[100px]' : 'gap-[60px]'} z-20`}
  >
    <img
      src={`/images/services/${content.image.href}.webp`}
      alt={content.title}
      width={content.image.width}
      height={content.image.height}
      loading="lazy"
      decoding="async"
      class={`${content.image.href == 'dog-1' ? 'w-[430px]' : 'w-[387px]'} h-auto z-20`}
    />
    <div
      class={`flex flex-col justify-center items-start gap-8 text-paragraph pb-[60px] ${content.image.href == 'dog-1' ? 'max-w-none' : 'max-w-[63%]'}`}
    >
      <div class="flex flex-col justify-center items-start gap-4">
        <p
          class="text-[20px] text-normal tracking-[4px] leading-[120%] uppercase"
        >
          {content.subtitle}
        </p>
        <h1 class="text-[48px] leading-[110%] font-normal font-title">
          {content.title}
        </h1>
        <p class="text-[20px] leading-[120%] font-normal">
          {content.description}
        </p>
      </div>
      <p class="text-[20px] leading-[120%] font-bold ">{content.text1}</p>
      <div class="grid grid-cols-2 gap-x-12 gap-y-4">
        {
          content.items.map((item) => (
            <div class="flex justify-start items-center gap-2.5 min-w-0">
              <Icon name={content.image.href} class="w-6 h-6 flex-none" />
              <p class="flex-1 min-w-0 text-[20px] leading-[120%] text-paragraph font-normal wrap-break-word">
                {item}
              </p>
            </div>
          ))
        }
      </div>
      <Button
        text={content.button}
        href="#"
        extraBtnClass="bg-primary"
        iconName="arrow"
        iconClass="text-primary"
      />
    </div>
  </div>
</section>
