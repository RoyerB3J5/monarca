---
import { Icon } from 'astro-icon/components';

const icons = [
  {
    name: 'email',
    href: 'https://mail.google.com/mail/?view=cm&fs=1&to=Monarca.grooming@gmail.com',
  },
  {
    name: 'instagram',
    href: 'https://www.instagram.com/monarca.pets.spa/',
  },
  {
    name: 'facebook',
    href: 'https://www.facebook.com/Grooming.Monarca.spa/',
  },
];
---

<div class="flex justify-center items-center gap-3.5 w-full">
  {
    icons.map((i) => (
      <a
        href={i.href}
        class="w-[27px] h-[27px] md:w-[31px] md:h-[31px] rounded-full flex items-center justify-center bg-primary-dark shrink-0"
      >
        <Icon name={i.name} class={'w-4 h-4  text-white'} />
      </a>
    ))
  }
</div>
